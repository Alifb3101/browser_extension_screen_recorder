{
  "manifest_version": 3,
  "name": "Student Screen Recorder",
  "version": "1.0",
  "description": "Record screen and upload to GitHub after login with Firebase GitHub Auth.",
  "permissions": [
    "downloads",
    "scripting",
    "activeTab",
    "tabs",
    "desktopCapture",
    "storage",
    "identity",
    "unlimitedStorage"
  ],
  "host_permissions": [
    "https://*.firebaseapp.com/*",
    "https://*.github.com/*",
    "https://api.github.com/*"
  ],
  "web_accessible_resources": [
    {
      "resources": ["window.html"],
      "matches": ["<all_urls>"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Screen Recorder"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "128": "download.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'; frame-src 'self'"
  }
}

